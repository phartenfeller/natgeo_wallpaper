{
  "compilerOptions": {
    "module": "amd",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es6",
    "allowJs": false,
    "outDir": "./test.js"
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}
